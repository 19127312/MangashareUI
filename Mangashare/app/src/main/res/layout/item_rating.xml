<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nameRatingTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Nguyễn Văn A - "
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/starRatingOneItemIM"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/ic_star_gray"
            app:layout_constraintBottom_toBottomOf="@+id/nameRatingTV"
            app:layout_constraintStart_toEndOf="@+id/nameRatingTV"
            app:layout_constraintTop_toTopOf="@+id/nameRatingTV" />

        <ImageView
            android:id="@+id/starRatingTwoItemIM"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_star_gray"
            app:layout_constraintBottom_toBottomOf="@+id/starRatingOneItemIM"
            app:layout_constraintStart_toEndOf="@+id/starRatingOneItemIM"
            app:layout_constraintTop_toTopOf="@+id/starRatingOneItemIM" />

        <ImageView
            android:id="@+id/starRatingThreeItemIM"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_star_gray"
            app:layout_constraintBottom_toBottomOf="@+id/starRatingTwoItemIM"
            app:layout_constraintStart_toEndOf="@+id/starRatingTwoItemIM"
            app:layout_constraintTop_toTopOf="@+id/starRatingTwoItemIM" />

        <ImageView
            android:id="@+id/starRatingFourItemIM"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_star_gray"
            app:layout_constraintBottom_toBottomOf="@+id/starRatingThreeItemIM"
            app:layout_constraintStart_toEndOf="@+id/starRatingThreeItemIM"
            app:layout_constraintTop_toTopOf="@+id/starRatingThreeItemIM" />

        <ImageView
            android:id="@+id/starRatingFiveItemIM"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_star_gray"
            app:layout_constraintBottom_toBottomOf="@+id/starRatingFourItemIM"
            app:layout_constraintStart_toEndOf="@+id/starRatingFourItemIM"
            app:layout_constraintTop_toTopOf="@+id/starRatingFourItemIM" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/contentRatingTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/lexend_regular"
        android:text="Truyện hay quá. Art đẹp"
        android:textColor="@color/black_3"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="5dp" />

    <TextView
        android:id="@+id/timeRatingTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="04/07/2021"
        android:textColor="@color/gray_5"
        android:textSize="14sp" />

</LinearLayout>