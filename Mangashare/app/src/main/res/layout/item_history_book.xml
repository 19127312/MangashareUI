<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/coverHistory"
        android:layout_width="100dp"

        android:layout_height="130dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cover_manga" />

    <TextView
        android:id="@+id/nameMangaHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/coverHistory"
        app:layout_constraintTop_toTopOf="@+id/coverHistory" />

    <TextView
        android:id="@+id/chapterHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lexend_medium"
        android:text="TextView"
        android:textColor="@color/black_2"
        app:layout_constraintEnd_toEndOf="@+id/nameMangaHistory"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toStartOf="@+id/nameMangaHistory"
        app:layout_constraintTop_toBottomOf="@+id/nameMangaHistory" />

    <TextView
        android:id="@+id/dateHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lexend_medium"
        android:text="TextView"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/chapterHistory"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/chapterHistory"
        app:layout_constraintTop_toBottomOf="@+id/chapterHistory" />

    <ImageView
        android:id="@+id/buttonContinueReading"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/coverHistory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/coverHistory"
        app:srcCompat="@drawable/ic_continue" />
</androidx.constraintlayout.widget.ConstraintLayout>